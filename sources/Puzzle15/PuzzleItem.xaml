<UserControl x:Class="Puzzle15.PuzzleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="discBrush" EndPoint="0,.5" SpreadMethod="Reflect">
            <GradientStop Color="DarkGray" Offset="0" />
            <GradientStop Color="White" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>
    <Grid>
        <Rectangle Stroke="DarkBlue" StrokeThickness="2" Fill="{StaticResource discBrush}" 
                   RadiusX="0" RadiusY="0"/>
        <TextBlock FontStyle="Normal" FontSize="20" HorizontalAlignment="Center" Name="TbVal" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
