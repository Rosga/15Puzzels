<Window x:Class="Puzzle15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="350">
    <Grid Name="Grid">

        <Canvas Name="cnv" Width="240" Height="240">
        </Canvas>
        <Button x:Name="btnRestart" Content="Розпочати знову" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="106" Height="36" Click="Button_Click" BorderBrush="#FFB2B2B2" Visibility="Hidden" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFC3C3C3" Offset="1"/>
                    <GradientStop Color="White" Offset="0.501"/>
                    <GradientStop Color="#FFC3C3C3"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock Name="Congrad" HorizontalAlignment="Left" Margin="10,73,0,0" TextWrapping="Wrap" Text="Поздоровляємо!!" VerticalAlignment="Top" Height="71" Width="322" LineHeight="36" FontSize="36" FontWeight="Bold" TextAlignment="Center" Foreground="#FFCB0000" Visibility="Hidden"/>

    </Grid>
</Window>
